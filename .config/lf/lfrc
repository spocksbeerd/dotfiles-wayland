set hidden true
set history false
set wrapscroll true
set errorfmt "\033[7;31;40m"

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *.7z) 7z x "$f" ;;
      *.rar) unrar x "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd dirselected ${{
    set -f
    read -p "Directory name: " name
    mkdir -- "$name"

    while IFS= read -r filename; do
        mv -- "$filename" "$name"
    done <<< "$fx"
}}

# bindings
map y copy
map p paste
map x cut
map d
map dd delete

map au unarchive
map ds dirselected

map gf cd /run/media/edisan/Storage/Media/Film

# run shell script/binary
map R $"$f"

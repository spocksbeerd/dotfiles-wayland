{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "layer": "overlay",
    "cssPriority": "user",

    "control-center-width": 380,
    "control-center-height": 700,
    "control-center-margin-top": 8,
    "control-center-margin-bottom": 8,
    "control-center-margin-right": 8,
    "control-center-margin-left": 0,

    "notification-window-width": 396,
    "notification-icon-size": 48,
    "notification-body-image-height": 160,
    "notification-body-image-width": 200,

    "timeout": 4,
    "timeout-low": 2,
    "timeout-critical": 6,

    "fit-to-screen": true,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 120,
    "hide-on-clear": false,
    "hide-on-action": false,
    "script-fail-notify": true,
    "scripts": {},
    "notification-visibility": {
        "example-name": {
            "state": "muted",
            "urgency": "Normal",
            "app-name": "Spotify"
        }
    },
    "widgets": [
        "buttons-grid",
        "volume",
        "mpris",
        "dnd",
        "title",
        "notifications"
    ],
    "widget-config": {
        "buttons-grid": {
            "actions": [
                {
                    "label": "󰤨 ",
                    "type": "toggle",
                    "active": true,
                    "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && nmcli radio wifi on || nmcli radio wifi off'",
                    "update-command": "sh -c '[[ $(nmcli r wifi) == \"enabled\" ]] && echo true || echo false'"
                },
                {
                    "label": "󰂯",
                    "type": "toggle",
                    "active": true,
                    "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && bluetoothctl power on || bluetoothctl power off'",
                    "update-command": "sh -c '[[ $(bluetooth.sh) == \"true\" ]] && echo true || echo false'"
                },
                {
                    "label": "󰍬",
                    "type": "toggle",
                    "active": true,
                    "command": "pamixer --default-source --toggle-mute",
                    "update-command": "sh -c '[[ $(pamixer --default-source --get-mute) == \"true\" ]] && echo false || echo true'"
                },
                {
                    "label": "",
                    "command": "powermenu.sh"
                }
            ]
        },
        "volume": {
            "label": "󰕾 ",
            "expand-button-label": "",
            "collapse-button-label": "",
            "show-per-app": true,
            "show-per-app-icon": false,
            "show-per-app-label": true
        },
        "mpris": {
            "image-size": 96,
            "image-radius": 20
        },
        "dnd": {
            "text": "Do not disturb"
        },
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "󰎟"
        }
    }
}
